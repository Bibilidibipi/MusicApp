<form action="<%= action_url %>" method="post">
  <%= csrf_token %>
  <input type="hidden" name="_method" value="<%= method %>">
  <label>Album:
    <select name="track[name]">
      <%= render 'albums', current_album: @album %>
    </select>
  </label><br/>
  <label>Name:
    <input type="string" name="track[name]">
  </label><br/>
  <label>Bonus:
    <input type="radio" name="track[bonus]" value="true">Yes<br/>
    <input type="radio" name="track[bonus]" value="false">No<br/>
  </label><br/>
  <label>Lyrics:
    <textarea name="track[lyrics]"></textarea>
  </label><br/>
  <input type="submit" value="<%= title %>">
</form>
